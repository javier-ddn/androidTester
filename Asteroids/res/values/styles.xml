<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <!-- <style name="AppTheme" parent="AppBaseTheme"> -->
    <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    <!-- </style> -->

    <style name="AppTheme" parent="@android:style/Theme.Wallpaper.NoTitleBar.Fullscreen">
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.title">
        <item name="android:textSize">35sp</item>
        <item name="android:paddingBottom">70dp</item>
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:background">@color/transparentBlack</item>
        <item name="android:textColorHighlight">@android:color/holo_green_light</item>
        <item name="android:capitalize">words</item>
    </style>

    <style name="AppTheme.button">
        <item name="android:textSize">15sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>